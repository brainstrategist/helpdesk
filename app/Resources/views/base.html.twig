<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <title>{% block title %}BrainStrategist - A free HelpDesk platform using Symfony{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <link href='https://fonts.googleapis.com/css?family=Biryani:400,300' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ asset('assets/css/brain_strategist_compiled.min.css') }}" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="{{ app.request.attributes.get('_route')}}">
    {{ include('::header.html.twig') }}
    {% if app.request.attributes.get('_route') == "default" and not is_granted('IS_AUTHENTICATED_FULLY') %}
        {{ include('BrainStrategistKernelBundle:Default:carousel_home.html.twig') }}
    {% endif %}
    <div class="full-page-layout">
        <div class="template">
            {% if app.request.attributes.get('_route') != "default" %}
                {{ wo_render_breadcrumbs() }}
            {% endif %}

            {% block body %}{% endblock %}
            {% block additionnalScripts %}{% endblock %}
        </div>
    </div><!-- /.container -->
    {{ include('::footer.html.twig') }}
    </body>
</html>
