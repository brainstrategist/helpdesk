{% extends 'base.html.twig' %}
{% block title %}BrainStrategist - A free HelpDesk platform using Symfony{% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}
    <div class="col-sm-12 blog-main">
        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="blog-post">
            <h2 class="blog-post-title">Discover our services and philosophy</h2>
            <p>Curently in progress.</p>
          </div>
         {% else %}
         <div class="row">
            <div class="col-md-12">
             <h2 class="blog-post-title">Welcome on your Dashboard</h2>
             <p>Please select an organization</p>
             {% if  listOrganization|length > 0 %}
                 <table class="table table-striped">
                      <thead class="dark-head-thead">
                        <tr>
                          <th>Name</th>
                          <th>Active</th>
                        </tr>
                      </thead>
                      {% for organization in listOrganization %}
                      <tbody>
                        <tr>
                          <td>
                          <div class="col-md-2">
                          {% if file_exists(asset(full_organization_directory~'/'~organization.picture)) %}
                             <div class="picture-cover"><img src="{{ asset(organization_directory~'/'~organization.picture)| imagine_filter('my_thumb') }}" /></div><br/>
                          {% endif %}
                          </div>
                          <div class="col-md-10">
                             <b><a href={{ path('organize_access', { 'slug': organization.slug }) }}>{{ organization.name }}</a></b>
                             <br/>
                             <small>Created the {{ organization.dateCreation|date("m/d/Y")}}
                              {% if organization.creator|length > 0 %}
                                by {{ organization.creator.username }}
                              {% endif %}
                              </small>
                              <br>
                               <small>{{ organization.usersOrganization|length }} member(s) in this organization</small>
                              <br/>
                              <a href={{ path('organize_edit', { 'id': organization.id }) }} class="btn btn-primary btn-sm" >Edit</a>
                        </div>
                         </td>
                          <td>
                              <div class="switch">
                                <input id="cmn-toggle-{{ organization.id}}" class="cmn-toggle cmn-toggle-round" type="checkbox" {% if organization.isActive == 1 %} checked="checked"{% endif %} disabled />
                                <label for="cmn-toggle-{{ organization.id}}"></label>
                              </div>
                          </td>
                        </tr>
                        {% endfor %}
                      </tbody>
                    </table>
             {% else %}
                 <p>You don't have created or being a member of any Organization(s).</p>
             {% endif %}
             <a href={{ path('organize_create') }} class="btn btn-primary" >Create an Organization</a>
         </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/brain_strategist_compiled.js') }}"></script>
{% endblock %}